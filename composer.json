{
  "name": "zzstudio/think-glide",
  "description": "ThinkPHP8 adapter for using Glide image manipulation library",
  "type": "library",
  "keywords": ["thinkphp", "glide", "think-glide"],
  "license": "MIT",
  "authors": [
    {
      "name": "byron sampson",
      "email": "xiaobo.sun@qq.com"
    }
  ],
  "require": {
    "php": ">=7.3.0",
    "topthink/framework": "^8.0",
    "league/glide": "^2.1",
    "symfony/options-resolver": "^2.0|^3.0|^4.0"
  },
  "autoload": {
    "psr-4": {
      "think\\": "src/"
    },
    "files": [
      "src/helper.php"
    ]
  },
  "extra": {
    "think": {
      "config":{
        "glide": "src/config.php"
      }
    }
  }
}
